<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTurismo.Views.AutorizacionFacebook">

    <StackLayout VerticalOptions="FillAndExpand">
        <Image Source="facebookAuth.png" Aspect="AspectFill" HeightRequest="150"/>

        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="¿Estás seguro de autorizar a esta aplicación para iniciar sesión?" 
                   HorizontalOptions="CenterAndExpand" 
                   TextColor="Black" 
                   FontSize="18" 
                   Margin="0,20,0,20"/>

            
            <Button Text="Sí, confirmo" Clicked="btnConfirmar_Clicked" x:Name="btnConfirmar" BackgroundColor="#1877f2" TextColor="White" Margin="10,0,10,0"/>
            <Button Text="Cancelar" Clicked="btnCancelar_Clicked" x:Name="btnCancelar" BackgroundColor="Red" TextColor="White" Margin="10,0,10,0"/>
        </StackLayout>
    </StackLayout>

</ContentPage>