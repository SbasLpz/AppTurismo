<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              
             x:Class="AppTurismo.Views.Mapa">
    <ContentPage.Content>
        <StackLayout>

            <WebView x:Name="webViewMapa"  HeightRequest="50" />
            <WebView x:Name="webViewMapaContent" Source="{Binding MapContent}" HeightRequest="300" />
            <StackLayout>
                <Label Text="Actividades disponibles" 
                       FontSize="Medium" 
                       TextColor="Black"
                       Margin="3"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Actividad 1" Margin="8,3,10,0" TextColor="Black" />
                <Label Text="Actividad 2" Margin="8,3,10,0" TextColor="Black" />
                <Label Text="Actividad 3" Margin="8,3,10,0" TextColor="Black" />


            </StackLayout>
                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>